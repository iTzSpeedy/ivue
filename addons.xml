<addons>

<addon id="plugin.video.tecboxivuewiz" name="Tecbox Ivue Wizard" version="0.0.4" provider-name="Tecbox">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Tecbox Ivue Wizard</summary>
    <description lang="en">Tecbox Ivue Wizard provides easy access to fixes and maintenance for Ivue Tv Guide</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="script.tvguidetecbox" name="iVue TV Guide" version="6.0.23" provider-name="TECBOX DreamHD">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<description lang="en">iVue Guide allows you to combine some of your favourite live TV plugins for use with a fully working EPG</description>
		<disclaimer lang="en">iVue Guide is based on FTV Guide by rayw1986 and Bluezed, which in turn is based on the original TV Guide addon by twinther.</disclaimer>
		<language></language>
		<platform>all</platform>
		<license>GPLv2</license>
		<forum></forum>
		<website></website>
		<email></email>
		<source></source>
	</extension>
</addon>

<addon id="xbmc.repo.tecboxtvguide" name="iVue TV Guide Add-on" version="1.0.2" provider-name="DreamHD TECbox">
	<extension point="xbmc.addon.repository" name="iVue TV Guide Add-ons Repository">
		<info compressed="false">https://raw.githubusercontent.com/totaltec2014/ivuerepo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/totaltec2014/ivuerepo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/totaltec2014/ivuerepo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install iVue TV Guide </summary>
		<description>Download and install for iVue Tv guide addons </description>
		<disclaimer> Repo for iVue Tv guide addon </disclaimer>
		<platform>all</platform>
	</extension>
</addon>

</addons>
